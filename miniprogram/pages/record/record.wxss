.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container {
  position: relative;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 固定头部区域 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: transparent;
  padding: 20px 14px;
  backdrop-filter: blur(10px);
}

/* Tab 切换 */
.tab-header {
  display: flex;
  gap: 32px;
  margin-bottom: 16px;
}

.tab-item {
  position: relative;
  padding: 4px 0;
}

.tab-item text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 16px;
  font-family: PingFang SC;
  font-weight: 400;
}

.tab-item.active text {
  color: #FFFFFF;
  font-weight: 600;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background: transparent;
}

.tab-item.active .tab-line {
  background: #FFFFFF;
}

/* 搜索区域 */
.search-area {
  display: flex;
  gap: 12px;
  align-items: center;
}

.search-input-wrapper {
  flex: 1;
  height: 36px;
  background: #FFFFFF;
  border-radius: 18px;
  display: flex;
  align-items: center;
  padding: 0 12px;
}

.search-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 14px;
}

.clear-icon {
  width: 16px;
  height: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(0, 0, 0, 0.3);
  font-size: 16px;
  margin-left: 8px;
  cursor: pointer;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
}

.search-btn {
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 18px;
  color: #971FCF;
  font-size: 14px;
  font-weight: 500;
}

/* 内容区域 */
.content-area {
  margin-top: 120px; /* 为固定头部预留空间 */
  flex: 1;
  width: 100%;
  padding: 0 14px;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 月份标题 */
.month-title {
  font-size: 16px;
  color: #FFFFFF;
  font-weight: 600;
  margin: 16px 0;
}

/* 梦境卡片 */
.dream-card {
  background: rgba(255, 255, 255, 0.76);
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  color: #000000;
}

.card-date {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.6);
}

.dream-image {
  width: 100%;
  height: 160px;
  border-radius: 8px;
  margin-bottom: 12px;
  object-fit: cover;
}

.dream-content {
  font-size: 14px;
  line-height: 1.6;
  color: #000000;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12px;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.tag {
  padding: 4px 12px;
  background: rgba(151, 31, 207, 0.1);
  border-radius: 4px;
  color: #971FCF;
  font-size: 12px;
}

/* 日历视图 */
.calendar-view {
  margin-top: 120px; /* 为固定头部预留空间 */
  padding: 0 12px;
  height: calc(100vh - 120px);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 日历头部 */
.calendar-header {
  margin-bottom: 20px;
}

.month-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.76);
  border-radius: 8px;
  padding: 12px;
}

.current-month {
  flex: 1;
  text-align: center;
}

.picker-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  font-size: 16px;
  font-weight: 600;
  color: #000000;
}

.picker-arrow {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.5);
  margin-top: 2px;
}

.arrow {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #971FCF;
  font-size: 18px;
  cursor: pointer;
}

/* 星期表头 */
.weekday-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  margin-bottom: 12px;
  padding: 0 4px;
  gap: 8px;
}

.weekday {
  color: #FFFFFF;
  font-size: 14px;
  padding: 8px 0;
}

/* 日历主体 */
.calendar-body {
  background: rgba(255, 255, 255, 0.76);
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 20px;
  height: 33vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.calendar-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8px;
  height: calc((33vh - 32px) / 6); /* 调整计算方式，32px 是上下 padding 的总和 */
}

.calendar-cell {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #000000;
  border-radius: 4px;
  cursor: pointer;
  padding: 4px;
  box-sizing: border-box;
}

.calendar-cell.today {
  background: #971FCF;
  color: #FFFFFF;
}

.calendar-cell.selected {
  background: rgba(151, 31, 207, 0.2);
}

.calendar-cell.positive {
  border: 1px solid #4CAF50;
}

.calendar-cell.negative {
  border: 1px solid #F44336;
}

.dream-indicator {
  position: absolute;
  bottom: 4px;
  width: 4px;
  height: 4px;
  border-radius: 50%;
}

.positive .dream-indicator {
  background: #4CAF50;
}

.negative .dream-indicator {
  background: #F44336;
}

/* 选中日期的梦境记录 */
.selected-date-dreams {
  height: auto;
  overflow: visible;
}

.no-dreams {
  text-align: center;
  padding: 20px;
  color: rgba(255, 255, 255, 0.6);
  font-size: 14px;
} 