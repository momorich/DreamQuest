.card {
  background: rgba(255, 255, 255, 0.76);
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 16px;
  font-family: PingFang SC;
  font-weight: 600;
  margin-bottom: 12px;
}

