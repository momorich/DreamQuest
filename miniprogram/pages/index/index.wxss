  width: 100%;
  height: 32px;
  padding-top: 20px;
  margin-bottom: 20px;
}

.logo-wrapper {
  position: absolute;
  left: 0;
  top: 20px;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.44);
  border-radius: 30px;
  padding: 4px 11px;
  height: 32px;
}

.logo {
  width: 24px;
  height: 24px;
}

.app-name {
  color: #FFFFFF;
  font-size: 16px;
  font-family: PingFang SC;
  font-weight: 600;
  margin-left: 4px;
}

.date-wrapper {
  position: absolute;
  right: 0;
  top: 20px;
  display: flex;
  align-items: center;
  gap: 8px;
  height: 32px;
}

.date, .weekday, .lunar {
  color: #FFFFFF;
  font-size: 14px;
  font-family: PingFang SC;
  font-weight: 600;
}

/* æ¢¦å¢ƒçŸ¥è¯†åŒºåŸŸ */
.dream-theory {
  margin-top: 20px;
  padding: 0 14px;
}

.theory-title {
  display: flex;
  align-items: center;
  gap: 5px;
  margin-bottom: 7px;
}

.theory-icon {
  font-size: 20px;
}

.theory-title text:last-child {
  color: #FFFFFF;
  font-size: 20px;
  font-family: PingFang SC;
  font-weight: 600;
}

.theory-content {
  color: #FFFFFF;
  font-size: 14px;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 21px;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

