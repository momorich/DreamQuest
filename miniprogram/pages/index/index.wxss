/* æ¢¦å¢ƒå‘¨æŠ¥å›¾ç‰‡ */
.report-image {
  width: 100%;
  height: 160px;
  border-radius: 8px;
  margin-bottom: 12px;
  object-fit: cover;
}

/* åº•éƒ¨å›ºå®šåŒºåŸŸ */
.bottom-section {
  position: fixed;
  bottom: 50px;
  left: 15px;
  right: 15px;
}

.chat-bubble {
  background: #F2F2F7;
  padding: 12px 16px;
  border-radius: 18px;
  margin-bottom: 16px;
  position: relative;
  width: fit-content;
  max-width: 80%;
  font-size: 14px;
  color: #000000;
}

.chat-bubble::before {
  content: '';
  position: absolute;
  left: -8px;
  top: 50%;
  transform: translateY(-50%);
  width: 10px;
  height: 10px;
  background: #F2F2F7;
  clip-path: polygon(100% 0, 0 50%, 100% 100%);
}

.input-area {
  display: flex;
  gap: 12px;
  align-items: center;
}

.dream-input {
  flex: 1;
  height: 36px;
  background: #FFFFFF;
  border-radius: 18px;
  padding: 0 16px;
  border: 1px solid;
  border-image: linear-gradient(to right, #CF14BF, #971FCF) 1;
}

.dream-input::placeholder {
  color: rgba(60, 60, 67, 0.6);
  font-size: 14px;
}

.voice-btn {
  width: 55px;
  height: 37px;
  background: linear-gradient(180deg, rgba(207, 20, 191, 0.15) 0%, rgba(151, 31, 207, 0.15) 100%);
  border-radius: 13px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-btn image {
  width: 24px;
  height: 24px;
}

/* TabBar */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 49px;
  background: rgba(253, 253, 253, 0.92);
  backdrop-filter: blur(48px);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.tab-icon {
  width: 24px;
  height: 24px;
}

.tab-text {
  font-size: 10px;
  color: rgba(60, 60, 67, 0.6);
  text-align: center;
}

